<h1 class="text-center">Your cocktail list</h1>
<div class="text-center padded">
  <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="text-center card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('../../assets/images/cocktail.jpg');">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
            <!-- <%= link_to cocktail.name, cocktail %> another way of passing the instance ID -->
        </div>
      </div>
      <% end %>
    </div>
</div>
