<div class="container">
  <div class="row">
    <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.input :description, placeholder: "5cl of vodka" %>
    <%= f.input :ingredient_id, collection: Ingredient.all, prompt: "Choose one" %>
